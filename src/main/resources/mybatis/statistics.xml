<select id="selectGender" resultType="user" parameterType="user">
	
	select user_gender, count(*) as cnt 
		from (select * 
	      	from userTable 
	      		where user_role = 'user' AND  user_gender = user_gender) A 
	GROUP BY user_gender ORDER BY cnt DESC

</select>

