<select id="selectAge" resultType="user" parameterType="user">
select age, count(*) as cnt from
    (select
        trunc(((extract(year from sysdate) - extract(year from user_birth )) / 10)) * 10 as age 
            from userTable
           where user_role = 'user' )
    group by age

</select>



